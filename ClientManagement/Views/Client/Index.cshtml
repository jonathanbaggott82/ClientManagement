@model IEnumerable<ClientManagement_Models.Models.Client>

<link rel="stylesheet" href="//cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css" />
@{
    ViewData["Title"] = "Index";
}

<div class="row mb-2">
    <div class="col-lg-12 col-md-12">
        <p class="mt-2">
            <a class="btn btn-sm btn-primary" asp-action="Create">Create New</a>
        </p>
        <table class="table" id="contactTable">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Headquarters)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Founded)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NumLocations)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Industry)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Headquarters)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Founded)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumLocations)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Industry)
                    </td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@item.Id">
                           <i class="bi bi-pencil-square"></i>
                        </a> 
                        <a class="btn btn-sm btn-info" asp-action="Details" asp-route-id="@item.Id">
                            <i class="bi bi-info-circle"></i>                        
                        </a>
                        <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>
@section scripts {
    <script src="//cdn.datatables.net/1.12.1/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#contactTable').DataTable();
        });
    </script>
}